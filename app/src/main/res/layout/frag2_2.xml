<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EDE9C3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_profile1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EDE8BC"
                android:layout_weight="1"
                android:src="@drawable/flower1" />

            <ImageView
                android:id="@+id/iv_profile2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F37DA5"
                android:src="@drawable/flower2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EDE9C3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_profile3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#A7F8AA"
                android:src="@drawable/flower3" />

            <ImageView
                android:id="@+id/iv_profile4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8EBADD"
                android:src="@drawable/flower4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EDE9C3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profile5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EF9478"
                android:src="@drawable/flower5" />

            <ImageView
                android:id="@+id/iv_profile6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9075C1"
                android:src="@drawable/flower6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EDE9C3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profile7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#32A398"
                android:src="@drawable/flower1" />

            <ImageView
                android:id="@+id/iv_profile8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:src="@drawable/flower2" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

